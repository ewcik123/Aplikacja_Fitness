<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Menu"
    android:background="@drawable/background_1">


    <ImageButton
        android:id="@+id/buttonAddExcercise"
        android:layout_width="420px"
        android:layout_height="520px"
        android:layout_marginStart="29dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_add_exercise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonAllExcercise"
        android:layout_width="420px"
        android:layout_height="520px"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_all_exercises"
        />

    <ImageButton
        android:id="@+id/buttonPlanTrening"
        android:layout_width="420px"
        android:layout_height="520px"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_plan_trening"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/buttonRunTraining"
        android:layout_width="420px"
        android:layout_height="520px"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_run_trening"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>